{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNEXT",
    "lib": ["dom", "es5"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["react"]
  },
  "exclude": ["node_modules", "docs"]
}
